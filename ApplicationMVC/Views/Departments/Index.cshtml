@model IEnumerable<ApplicationMVC.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Departments</h1>

<p>
    <a asp-action="AddDepartment">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateDepartment", new { id=item.DepartmentId }) |
                @Html.ActionLink("Details", "Details", new { id=item.DepartmentId }) |
                @Html.ActionLink("Delete", "DeleteDepartment", new { id=item.DepartmentId })
            </td>
        </tr>
}
    </tbody>
</table>
